{
	"name": "mocco",
	"version": "1.0.0",
	"description": "![Mocco](./screenshot.png)",
	"main": "index.php",
	"scripts": {
		"sass-style": "sass --no-source-map --watch .:.",
		"autoprefixer-style": "postcss --watch style.css --use autoprefixer --no-map -d .",
		"autoprefixer-hacks": "postcss --watch editor-hacks.css --use autoprefixer --no-map -d .",
		"dev": "concurrently \"npm run sass-style\" \"npm run autoprefixer-style\""
	},
	"keywords": [
		"theme",
		"wordpress"
	],
	"author": "jasmussen",
	"license": "GPL-2.0-or-later",
	"devDependencies": {
		"autoprefixer": "latest",
		"concurrently": "latest",
		"postcss-cli": "latest",
		"tar": ">=3.2.3",
		"trim-newlines": ">=3.0.1"
	},
	"dependencies": {
		"nvm": "0.0.4",
		"postcss": "^8.4.6",
		"sass": "^1.49.7"
	}
}
